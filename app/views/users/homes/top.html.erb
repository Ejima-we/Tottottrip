<div class="top">
  <div class="top-visual">
    <h1>スライドショー</h1>
  </div>
  <div class="top-genres">
    <% @genres.each do |genre| %>
      <div class="top-genres">
        <%= link_to posts_path(genre_id: genre.id) do %>
          <div class="top-genre btn">
            <%= genre.name %>はこちら
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="top-rank">
    <h3>人気投稿</h3>
    <div class="top-rank-posts">
      <% @posts_rank.each.with_index(1) do |post, i| %>
        <div class="top-rank-content post-content">
          <h6>第<%= i %>位</h6>
          <div class="top-rank-post-image">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, :fill, 300, 250, fallback: "no_image.png" %>
            <% end %>
          </div>
          <div class="top-rank-pots-title">
            <h5><%= post.title %></h5>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="top-new">
    <h3>新着投稿</h3>
    <div class="top-new-posts">
      <% @posts.each do |post| %>
        <div class="top-new-content post-content">
          <div class="top-rank-post-image">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, :fill, 300, 250, fallback: "no_image.png" %>
            <% end %>
          </div>
          <div class="top-rank-pots-title">
            <h5><%= post.title %></h5>
            <h6><%= post.created_at.strftime("%Y/%m/%d") %></h6>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>