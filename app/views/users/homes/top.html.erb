<div class="top">
  <div class="top-visual">
    <div class="top-visual-slick">
      <div class="top-visual-content image-1"></div>
      <div class="top-visual-content image-2"></div>
      <div class="top-visual-content image-3"></div>
      <div class="top-visual-content image-4"></div>
    </div>
  </div>
  <div class="about">
    <div class="about-image about-1"></div>
    <div class="about-text-image about-text-1"></div>
    <div class="about-image about-2"></div>
    <div class="about-text-image about-text-2"></div>
    <div class="about-image about-3"></div>
    <div class="about-text-image about-text-3"></div>
  </div>
  <div class="top-genres">
    <% @genres.each do |genre| %>
      <div class="top-genres">
        <%= link_to posts_path(genre_id: genre.id) do %>
          <div class="top-genre btn btn-blue">
            <%= genre.name %>はこちら
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="top-rank">
    <h3>人気投稿</h3>
    <div class="top-rank-posts top-posts-slider">
      <% @posts_rank.each.with_index(1) do |post, i| %>
        <div class="top-rank-content post-content">
          <h4>第<%= i %>位</h4>
          <div class="top-rank-post-image">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image %>
            <% end %>
          </div>
          <div class="top-rank-post-title">
            <h5><%= post.title %></h5>
            <h6><%= post.created_at.strftime("%Y/%m/%d") %></h6>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="top-new">
    <h3>新着投稿</h3>
    <div class="top-new-posts top-posts-slider">
      <% @posts.each do |post| %>
        <div class="top-new-content post-content">
          <div class="top-rank-post-image">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image %>
            <% end %>
          </div>
          <div class="top-rank-pots-title">
            <h5><%= post.title %></h5>
            <h6><%= post.created_at.strftime("%Y/%m/%d") %></h6>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>