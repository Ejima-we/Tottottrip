<%= form_with model:user, url: url, local: true do |f| %>
    <div class="row">
      <table class="table table-borderless">
          <tr>
            <td>名前</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>ニックネーム</td>
            <td><%= f.text_field :nickname %></td>
          </tr>
          <tr>
            <td>プロフィール</td>
            <td><%= f.text_area :profile %></td>
          </tr>
          <% if admins_signed_in? %>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, false %><span>有効</span>
              <%= f.radio_button :is_deleted, true %><span>退会</span>
            </td>
          </tr>
          <% end %>
      </table>
    </div>
    <div class="row">
      <%= f.submit "変更", class:"btn btn-success" %>
    </div>
  <% end %>