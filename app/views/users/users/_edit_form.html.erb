<%= form_with model:user, url: url, local: true do |f| %>
    <div class="row">
      <table class="table table-borderless">
          <tr>
            <td>名前</td>
            <td><%= f.text_field :name, class:"col-4" %></td>
          </tr>
          <tr>
            <td>ニックネーム</td>
            <td><%= f.text_field :nickname, class:"col-4" %></td>
          </tr>
          <tr>
            <td>プロフィール</td>
            <td><%= f.text_area :profile, rows:"4", class:"col-6" %></td>
          </tr>
          <% if admin_signed_in? %>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, false %><span>有効</span>
              <%= f.radio_button :is_deleted, true %><span>退会</span>
            </td>
          </tr>
          <% end %>
      </table>
    </div>
    <div class="row py-5">
      <div class="mx-auto">
      <%= f.submit "　変更する　", class:"btn btn-green mr-5" %>
      <% if user_signed_in? %>
        <%= link_to "　退会画面へ　", users_leave_path, class:"btn btn-red ml-5" %>
      <% end %>
      </div>
    </div>
  <% end %>