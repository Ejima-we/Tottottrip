<div class="container">
  <h1>会員情報編集</h1>

  <%= form_with model:@user, url: users_information_path, local: true do |f| %>
    <div class="row">
      <table class="table table-borderless">
          <tr>
            <td>名前</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>ニックネーム</td>
            <td><%= f.text_field :nickname %></td>
          </tr>
          <tr>
            <td>プロフィール</td>
            <td><%= f.text_area :profile %></td>
          </tr>
      </table>
    </div>
    <div class="row">
      <%= f.submit "変更", class:"btn btn-success" %>
    </div>
  <% end %>
</div>