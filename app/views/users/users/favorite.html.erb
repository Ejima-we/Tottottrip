<div class="container">
  <h1>お気に入り</h1>
  <div class="row">
    <% @favorites.each do |favorite| %>
      <% post = Post.find_by(id: favorite.post_id) %>
      <%= link_to post_path(post.id), data: {"turbolinks" => false} do %>
        <%= attachment_image_tag post, :image, :fill, 200, 200, fallback: "no_image.jpg" %>
      <% end %>
        <h3><%= link_to post.title, post_path(post.id), data: {"turbolinks" => false} %></h3>
    <% end %>
  </div>
</div>