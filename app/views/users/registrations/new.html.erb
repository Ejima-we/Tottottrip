<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="row my-5 box-dotted-line">
      <h3>新規登録</h3>
      <table class="table table-borderless my-3">
        <tr>
          <td>名前</td>
          <td><%= f.text_field :name, autofocus: true %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= f.text_field :nickname, autofocus: true %></td>
        </tr>
        <tr>
          <td>Eメール</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td>パスワード
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td>パスワード(確認用)</td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
        </tr>
      </table>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>