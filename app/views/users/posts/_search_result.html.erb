<div class="post">
  <% posts.each do |post| %>
    <div class="post-content">
      <div class="post-image">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 300, 250, fallback: "no_image.png" %>
        <% end %>
      </div>
      <div class="post-text">
        <h4><%= post.title %></h4>
        <p><%= post.genre.name %></p>
        <p><%= post.created_at.strftime("%Y/%m/%d") %></p>
        <p class="likes"><%= post.favorites.count %><i class="fas fa-heart"></i></p>
      </div>
    </div>
  <% end %>
</div>