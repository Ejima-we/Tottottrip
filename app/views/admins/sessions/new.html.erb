<div class="container">
  <%= flash[:alert] %>
    <div class="row box-dotted-line">
      <h3>ログイン　<span class="small"><i class="fas fa-exclamation-triangle"></i> 管理者のログイン画面です</span></h3>
      <table class="table table-borderless my-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <tr>
            <td>Eメール</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td>パスワード</td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class:"btn btn-info" %></td>
          </tr>
       <% end %>
    </table>
  </div>
</div>