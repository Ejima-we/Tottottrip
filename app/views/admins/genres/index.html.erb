<div class="container">
  <h1>ターゲット登録</h1>
  <div class="row">
    <div class="col-md-6">
    <table class="table table-borderless">
      <%= form_with model:[:admins, @genre], local:true do |f| %>
        <tr>
          <td>ターゲット名</td>
          <td><%= f.text_field :name, class:"col-12" %></td>
          <td><%= f.submit "登録", class:"btn btn-success" %></td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
    <h2>ターゲット一覧</h2>
    <table class="table">
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集", edit_admins_genre_path(genre.id), class:"btn btn-info" %></td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>