<div class="container">
  <h1>投稿一覧</h1>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>投稿ID</th>
          <th>タイトル</th>
          <th>ジャンル</th>
          <th>日時</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= link_to post.title, post_path(post.id) %></td>
            <td><%= post.genre.name %></td>
            <td><%= post.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= paginate @posts %>
    </div>
  </div>
</div>